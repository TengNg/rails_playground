<h1>Articles</h1>

<div class="w-25 d-flex flex-column gap-2 p-2 justify-content-center align-items-start">
    <ul class="list-group d-flex gap-2 list-unstyled">
        <% @articles.each do |article| %>

        <li class="list-group-item">
            <a href="/articles/<%= article.id %>", class='text-decoration-none'>
                <%= article.title %>
            </a>
        </li>

        <% end %>
    </ul>

    <a class="text-decoration-none btn btn-dark" href="/articles/new">Add new article</a>

</div>

