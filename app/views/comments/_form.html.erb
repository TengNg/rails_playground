<%= form_with(
    model: [article, article.comments.build],
    html: { style: 'width: fit-content; height: fit-content',
    class: 'border border-dark p-3 w-fit' }
) do |form| %>
    <div>
        <%= form.label :commenter, "Commentor" %><br>
        <%= form.text_field :commenter, autocomplete: "off" %>
    </div>

    <div>
        <%= form.label :body %><br>
        <%= form.text_area :body, autocomplete: "off" %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>

